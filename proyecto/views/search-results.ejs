<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/headerNoLogueado.ejs') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% if (productos.length !=0) { %>

				<div class="col-12 col-sm-6 col-lg-3">
					<% for( let i = 0; i < productos.length; i++ ) { %>
						<section class="product-box">
							<a href="/productos/detalleProducto"> 
								<figure class="product-box_image">
									<img class="foto-producto" src= <%=productos[i].imagen%> alt=<%= productos[i].nombre_producto %>>
								</figure>
								<article class="product-box_data">
									<h2><%=productos[i].nombre_producto%></h2>
									<p><%= productos[i].descripcion_producto %></p></a>
									<a href="/users/profile/id/<%=productos[i].productoUsuarios.id %>"><p>Usuario: <%= productos[i].productoUsuarios.usuario %></p></a>
									
								</article>
							
						</section>
					<% } %>
					</div>
				 <% } else { %>

					<h2 class="products-title"> No hay resultados para tu búsqueda </h2>

						<% } %>
			 

			
			

					</div>
				</div>
			</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>