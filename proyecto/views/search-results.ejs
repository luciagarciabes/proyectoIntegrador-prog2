<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/headerNoLogueado.ejs') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
<!-- estructura traida de products.ejs -->
			<div class="container products-wrapper">
				<div class="d-flex align-items-center">
					<h2 class="products-title"><%= datos.productos[1].nombre %></h2> 
					<p class="product-detail-description">
						<a href="/productos/agregarProducto">Editar</a> <!-- href cambiar-->
					</p>
				</div>
				<div class="product-detail">
					<div class="row">
						<article class="col-12 col-lg-8 product-detail-info">
							<img src=<%=datos.productos[1].imagen %> alt=<%=datos.productos[1].nombre %> class="product-detail-img">
							<p class="product-detail-description">
								<%= datos.productos[1].descripción %></p>
						</article>
						<div class="col-12 col-lg-4">
							<section class="comments">
								<% for( let i = 0; i < datos.comentarios.length; i++ ) { %>
									<article>
										<img src="https://via.placeholder.com/35" alt="">
										<div class="data">
											<p class="user">
											<strong> <a href="/users/profile">Nombre usuario: <%= datos.comentarios[i].usuario %> </a> </strong> <!-- href cambiar-->
											<%= datos.comentarios[i].texto %></p>
										</div>
									</article>
								
								<% } %>
							</section>
							<form class="form" action="/productos/detalleProducto" method="GET">
								<input class="form-input" type="text" value="" placeholder="Agregar comentario">
								<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
							</form>
							<hr>
						</div>
					</div>
				</div>
			</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>