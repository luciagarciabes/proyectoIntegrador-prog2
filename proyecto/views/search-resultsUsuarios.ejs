<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<% if (locals.usuarioLogueado != undefined) { %>
	<%- include("./partials/headerLogueado.ejs") %>
<% } else { %>
	<%- include('./partials/headerNoLogueado.ejs') %>
<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% if (usuarios.length !=0) { %>
				<% for(let i = 0; i < usuarios.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/users/profile/id/<%= usuarios[i].id %>">
								<article class="product-box_data">
									<img class="imgusuariobuscador" src="<%=usuarios[i].foto_perfil  %>" alt="">
									<section><h2><%= usuarios[i].usuario%></h2>
										<h3><%= usuarios[i].email %></h3></section>
									
								</article>
							</a>
						</section>
					</div>
				<% } %>
				
				 <% } else { %>

					<h2 class="products-title"> No hay resultados para tu búsqueda </h2>

						<% } %>
			 

			
			

					</div>
				</div>
			</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>