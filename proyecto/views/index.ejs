<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/headerNoLogueado.ejs') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
	
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<% for( let i = 0; i < 4; i++ ) { %>
					<section class="product-box">
						<a href="/productos/detalleProducto"> 
							<figure class="product-box_image">
								<img class="foto-producto" src= <%=productos[i].imagen%> alt=<%= productos[i].nombre_producto %>>
							</figure>
							<article class="product-box_data">
								<h2><%=productos[i].nombre_producto%></h2>
								<p><%= productos[i].descripcion_producto %></p></a>
								<a href="/users/profile/id/<%=productos[i].productoUsuarios.id %>"><p>Usuario: <%= productos[i].productoUsuarios.usuario %></p></a>
								
							</article>
						
					</section>
				<% } %>
			</div>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más Vendidos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div  id = "productos" class="col-12 col-sm-6 col-lg-3 productos">
				<% for( let i = 5; i< 9; i++ ) { %>
					<section class="product-box">
						<a href="productos/detalleProducto"> 
							<figure class="product-box_image">
								<img class="foto-producto" src= <%=productos[i].imagen%> alt= <%= productos[i].nombre %>>
							</figure>
							<article class="product-box_data">
								<h2><%=productos[i].nombre%></h2>
								<p><%= productos[i].descripcion_producto %></p></a>
								<a href="/users/profile/id/<%=productos[i].productoUsuarios.id %>"><p>Usuario: <%= productos[i].productoUsuarios.usuario %></p></a>
							</article>
						
					</section>
				<% } %>
			</div>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>