	</div>
</header>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<form class="formRegister" action="/users/profile" method="GET">
				<label class="label"  for="email">Email:</label>
				<input class="input" type="email" id="email" name="email" value= <%=usuario.email %>> <br> 
			  
				<label class="label" for="usuario"> Usuario:</label>
				<input  class="input" type="text" id="usuario" name="usuario" value=<%= usuario.usuario %>  ><br>
			  
				<label class="label"  for="Contraena">Contraseña:</label>
				<input class="input"  type="password" id="contraseña" name="contraseña" value= <%=usuario.contraseña  %>><br>
			  
				<label class="label"  for="Fecha de nacimiento">Fecha de Nacimiento:</label>
				<input  class="input" type="date" id="fecha_nacimiento" name="fecha_nacimiento" value= <%=usuario.nacimiento  %>><br>
			  
				<label class="label"  for="Nro de documento">Nro de Documento:</label>
				<input  class="input" type="text" id="nro_documento" name="nro_documento" value=<%= usuario.documento %> ><br>
			  
				<label class="label"  for="Foto de perfil">Foto de Perfil:</label>
				<input  class="input" type="text" id="foto_perfil" name="foto_perfil"  value=<%=usuario.foto %>><br>
			  
				<input class="submit" type="submit" value="Actualizar información">
			  </form>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>